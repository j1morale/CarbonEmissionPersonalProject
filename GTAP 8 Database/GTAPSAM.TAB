Coefficient (all,i,CGDS_COMM)(all,j,AWW)(all,r,REG)
    ACAPWW(i,j,r);
Formula (all,i,CGDS_COMM)(all,j,AWW)(all,r,REG)
    ACAPWW(i,j,r)=sum{k,WW,CAPWW(i,k,r)};


