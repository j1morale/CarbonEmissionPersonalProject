    YG(i,j,r)=sum{m,MCOM,VIGM(m,i,r)}+sum{c,DCOM,VDGM(c,i,r)}
              +sum{t,TSSM,TSSMG(t,i,r)}+sum{d,TSSD,TSSDG(d,i,r)};

